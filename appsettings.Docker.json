{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "OpenTelemetry": "Information"
    }
  },
  "AllowedHosts": "localhost;127.0.0.1;*.local;alloy",
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "https://localhost:3001", "http://127.0.0.1:3000", "https://127.0.0.1:3001"]
  },
  "OpenTelemetry": {
    "ServiceName": "user-api",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "http://alloy:4320",
    "TracesExporter": "otlp",
    "MetricsExporter": "otlp",
    "LogsExporter": "otlp"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.OpenTelemetry"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/application-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://alloy:4321/v1/logs",
          "protocol": "HttpProtobuf",
          "headers": {
            "X-Source": "user-api"
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName",
      "WithCorrelationId"
    ],
    "Properties": {
      "Application": "user-api",
      "Environment": "Docker"
    }
  },
  "HealthChecks": {
    "UI": {
      "Path": "/health-ui",
      "ApiPath": "/health-api"
    }
  }
}
